{
    "name": "justbetter/statamic-cloudflare-purge",
    "description": "Addon that hooks into the statamic invalidation process and purges cloudflare caches",
    "keywords": [
        "Jade Geels",
        "laravel",
        "statamic-cloudflare-purge"
    ],
    "homepage": "https://github.com/jade-gg/statamic-cloudflare-purge",
    "license": "MIT",
    "authors": [
        {
            "name": "Jade Geels",
            "email": "jade@justbetter.nl",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "statamic/cms": "^5.0"
    },
    "require-dev": {
        "laravel/pint": "^1.7",
        "larastan/larastan": "^2.5",
        "phpstan/phpstan-mockery": "^1.1"
    },
    "autoload": {
        "psr-4": {
            "JustBetter\\StatamicCloudflarePurge\\": "src/"
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true,
            "pixelfear/composer-dist-plugin": false
        }
    },
    "extra": {
        "statamic": {
            "name": "Cloudflare purge",
            "description": "Addon that hooks into the statamic invalidation process and purges cloudflare caches"
        },
        "laravel": {
            "providers": [
                "JustBetter\\StatamicCloudflarePurge\\StatamicCloudflarePurgeServiceProvider"
            ]
        }
    },
    "scripts": {
        "analyse": "phpstan",
        "style": "pint --test",
        "fix-style": "pint"
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
